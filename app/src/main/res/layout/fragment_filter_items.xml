<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/part_search"/>


        <RelativeLayout
            android:id="@+id/fragment_filter_items_sort_drop_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fragment_filter_items_sort_drop_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/drop_down"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/fragment_filter_items_sort_drop_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="@string/sort"/>

        </RelativeLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/fragment_filter_items_sort_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/sort_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <RadioButton
                        android:id="@+id/sort_type_items_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name" />

                    <RadioButton
                        android:id="@+id/sort_type_items_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/type"/>

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/sort_direction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <RadioButton
                        android:id="@+id/sort_direction_asc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/asc"/>

                    <RadioButton
                        android:id="@+id/sort_direction_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc"/>

                </RadioGroup>

            </LinearLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>


        <RelativeLayout
            android:id="@+id/fragment_filter_items_type_drop_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fragment_filter_items_type_drop_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/drop_down"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/fragment_filter_items_type_drop_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="@string/type"/>

        </RelativeLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/fragment_filter_items_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false">

            <RelativeLayout
                android:id="@+id/fragment_filter_items_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </net.cachapa.expandablelayout.ExpandableLayout>


        <RelativeLayout
            android:id="@+id/fragment_filter_items_advanced_drop_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/fragment_filter_items_advanced_drop_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/drop_down"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/fragment_filter_items_advanced_drop_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/advanced"/>

        </RelativeLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/fragment_filter_items_advanced_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/value"
                        android:layout_weight="0.4"
                        android:layout_gravity="center"/>

                    <Spinner
                        android:id="@+id/filter_items_value_operation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:entries="@array/filter_operations"/>

                    <EditText
                        android:id="@+id/filter_items_value_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        android:layout_weight="0.4"
                        android:layout_gravity="center"/>

                    <Spinner
                        android:id="@+id/filter_items_weight_operation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:entries="@array/filter_operations"/>

                    <EditText
                        android:id="@+id/filter_items_weight_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:inputType="numberDecimal"
                        android:autofillHints="@string/weight" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/magic"
                    android:gravity="center"/>

                <RadioGroup
                    android:id="@+id/filter_items_magic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/filter_items_magic_only"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/only"
                        android:layout_weight="0.33"/>

                    <RadioButton
                        android:id="@+id/filter_items_magic_both"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/both"
                        android:layout_weight="0.34"/>

                    <RadioButton
                        android:id="@+id/filter_items_magic_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/none"
                        android:layout_weight="0.33"/>

                </RadioGroup>

            </LinearLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

    </LinearLayout>

</ScrollView>